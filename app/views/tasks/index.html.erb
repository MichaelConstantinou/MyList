<% if current_user %>
  <h1>Hello <%= current_user.name.split.first %>, welcome to MyList</h1>

  <br>

  <h1>Tasks</h1>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Description</th>
        <th>Completed</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.user %></td>
          <td><%= task.description %></td>
          <td><%= task.completed %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Task', new_task_path %>

<% else %>

 <%= render :partial => "users/index" %>

<% end %><p id="notice"><%= notice %></p>
