
  <% if current_user %>
  <h1>Hello <%= current_user.name.split.first %>, welcome to MyList</h1>

  <br>

  <h1>My To-Do List</h1>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <% if task.completed %>
        <tr class="table-active">
          <td class="strike"><%= task.description %></td>
          <td>
              <%= link_to 'Show', task %>
              <%= link_to 'Edit', edit_task_path(task) %>
              <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>

        <% else %>

        <tr>
          <td><%= task.description %></td>
          <td>
              <%= link_to 'Show', task %>
              <%= link_to 'Edit', edit_task_path(task) %>
              <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>

      <% end %>
     <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add new task', new_task_path, class: 'btn btn-primary' %>

<% else %>

 <%= render :partial => "users/index" %>

<% end %><p id="notice"><%= notice %></p>
